{
  "name": "survey-emailer",
  "version": "1.0.0",
  "description": "Application to create survey campaigns for product feedback that are emailed to customers.",
  "main": "index.js",
  "engines": {
    "node": "8.6.0",
    "npm": "5.5.1"
  },
  "scripts": {
    "start": "node index.js",
    "server": "nodemon index.js",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm i --prefix client && npm run build --preifx client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kohded/survey-emailer.git"
  },
  "author": "Arnold Koh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kohded/survey-emailer/issues"
  },
  "homepage": "https://github.com/kohded/survey-emailer#readme",
  "dependencies": {
    "body-parser": "^1.18.2",
    "cookie-session": "^2.0.0-beta.3",
    "express": "^4.16.2",
    "mongoose": "^4.13.0",
    "passport": "^0.4.0",
    "passport-google-oauth20": "^1.0.0",
    "stripe": "^5.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.2",
    "concurrently": "^3.5.0",
    "eslint": "^4.10.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "nodemon": "^1.12.1"
  }
}
